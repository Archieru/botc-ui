<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bluffs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >

    <TextView
        android:id="@+id/bluffs_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="@string/bluffs" />

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/role1"
                android:layout_width="@dimen/start_info_bluff_width"
                android:layout_height="@dimen/start_info_bluff_height"
                android:layout_gravity="center"
                android:contentDescription="@string/default_name_role"
                android:src="@drawable/icon_empty" />
            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/role_icon"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/role2"
                android:layout_width="@dimen/start_info_bluff_width"
                android:layout_height="@dimen/start_info_bluff_height"
                android:layout_gravity="center"
                android:contentDescription="@string/default_name_role"
                android:src="@drawable/icon_empty" />
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/role_icon"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/role3"
                android:layout_width="@dimen/start_info_bluff_width"
                android:layout_height="@dimen/start_info_bluff_height"
                android:layout_gravity="center"
                android:contentDescription="@string/default_name_role"
                android:src="@drawable/icon_empty" />
            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/role_icon"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>